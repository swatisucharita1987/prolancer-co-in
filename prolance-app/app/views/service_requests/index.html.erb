<p id="notice"><%= notice %></p>

<h1>Your Order History</h1>
<div class="col-lg-8 col-lg-offset-2 col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Service Order Number</th>
      <th>Service city</th>
      <th>Service type</th>
      <th>Desired date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @service_requests.each do |service_request| %>
      <tr>
        <td><%= service_request.id %></td>
        <td><%= service_request.admin_service_city.city_name %></td>
        <td><%= service_request.admin_service.service_name %></td>
        <td><%= service_request.need_by_date %></td>
        <td><%= link_to 'Edit', edit_service_request_path(service_request) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Service Order', new_service_request_path %><br>
<%= link_to 'Logout', sessions_destroy_path %>
</div>