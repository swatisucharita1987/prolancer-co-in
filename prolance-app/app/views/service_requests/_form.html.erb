<%= form_for(@service_request) do |f| %>
    <% if @service_request.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@service_request.errors.count, "error") %> prohibited this service_request from being
            saved:</h2>

          <ul>
            <% @service_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.hidden_field :user_id, :value => session[:user_id] %>
    </div>
    <div class="form-group">
      <%= collection_select(:service_request, :admin_service_city_id, Admin::ServiceCity.all, :id, :city_name, {:prompt => "Please select city of service"}) %>
    </div>
    <div class="form-group">
        <%= collection_select(:service_request, :admin_service_id, Admin::Service.all, :id, :service_name, {:prompt => "Please select type of  service"}) %>
    </div>
    <div class="form-group">
      <%= f.text_area :service_desc, placeholder: true %>
    </div>
    <span class="form-element">
      <%= f.date_select :need_by_date %>
    </span>
    <div class="actions"><br><br>
      <%= f.submit :class => "btn btn-success" %>
    </div>
<% end %>

